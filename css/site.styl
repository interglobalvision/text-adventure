@import "sanitize"
@import "helpers"
@import "fonts"

// VARIABLES

$gutter = 18px
$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 34px
$font-leading-basic = 1.4em
$font-tracking-basic = 0.03em

$color-black = rgb(0,0,0)
$color-white = rgb(255,255,255)

// TYPOGRAPHY

body
  font-family: 'Fantasque Sans Mono', monospace
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-black
  color: $color-white
  overflow-x: hidden

.container
  max-width: 1200px
  box-sizing: border-box
  padding: $margin-small

img
  max-width: 100%
  height: auto


// FORM

input[type="text"]
  text-transform: uppercase
  width: 100%

  &:focus
    outline: none

input[type="submit"]
  display: none


// CONVERSATION FORM

.conversation

  #custom-form
    text-transform: uppercase

    input[type="radio"]
      opacity: 0
      width: 0
      height: 0

    label:before
      content: '>'
      padding: 0 5px
      opacity: 0

    input[type="radio"]:checked + label:before
      opacity: 1


// MEDIA QUERIES

@media screen and (min-width: 1800px)

  $gutter = 36px
  $margin-small = ($gutter)
  $margin-basic = ($gutter*2)
  $margin-large = ($gutter*5)

  $font-size-basic = 46px
  $font-leading-basic = 1.4em
  $font-tracking-basic = 0.035em

  body
    font-size: $font-size-basic
    line-height: $font-leading-basic
    letter-spacing: $font-tracking-basic

  .container
    max-width: 1650px
    padding: $margin-small


@media screen and (max-width: 1400px)

  $gutter = 18px
  $margin-small = ($gutter)
  $margin-basic = ($gutter*2)
  $margin-large = ($gutter*5)

  $font-size-basic = 28px
  $font-leading-basic = 1.4em
  $font-tracking-basic = 0.03em

