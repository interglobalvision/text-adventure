@import "sanitize"
@import "helpers"

// VARIABLES

$gutter = 18px
$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = $gutter
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black = rgb(0,0,0)
$color-white = rgb(255,255,255)
 
// TYPOGRAPHY

body
  font-family: 'Fantasque Sans Mono', monospace
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic
  text-align: justify

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-black
  color: $color-white
  overflow-x: hidden
  
.container
  width: 80%
  margin-left: $margin-small
  padding-top: $margin-small

img
  max-width: 100%
  height: auto


//the 100% widths are just so stylus can compile delete as desired

// HEADER

#header
  width: 100%

// POSTS LOOP
#posts
  width: 100%

.post
  width: 100%

#pagination
  width: 100%
  
// FORM
input[type="text"]
  text-transform: uppercase
  width: 100%

  &:focus
    outline: none

input[type="submit"]
  display: none

// CONVERSATION FORM
.conversation

  #custom-form
    text-transform: uppercase

    input[type="radio"]
      opacity: 0
      width: 0
      height: 0

    label:before
      content: '>'
      padding: 0 5px
      opacity: 0

    input[type="radio"]:checked + label:before
      opacity: 1

// FOOTER

#footer
  width: 100%


// MEDIA QUERIES

@media screen and (max-width: 600px)
  .container
    width: 90%
