@import "sanitize"
@import "helpers"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 15px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black = rgb(0,0,0)
$color-white = rgb(255,255,255)

// TYPOGRAPHY

body
  font-family: monospace
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-black
  color: $color-white

img
  max-width: 100%
  height: auto


//the 100% widths are just so stylus can compile delete as desired

// HEADER

#header
  width: 100%

// POSTS LOOP
#posts
  width: 100%

.post
  width: 100%

#pagination
  width: 100%
  
// FORM

#command-line
  display: block
  overflow: hidden
  
#command
  float: left
  padding-left: 3px
  white-space: pre

#caret
  float: left
  width: 5px
  height: 14px
  background: $color-white
  opacity: 0
  animation: blink 1s infinite linear
  
@keyframes blink
  0% 
    opacity: 0
  49% 
    opacity: 0
  50% 
    opacity: 1
  100% 
    opacity: 1
  
input
  height: 0
  width: 0
  opacity: 0

// FOOTER

#footer
  width: 100%


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
